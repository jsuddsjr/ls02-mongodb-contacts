{
  "name": "mongodb-contacts-api",
  "version": "1.0.0",
  "description": "Class assignment for CSE 341. A simple API that allows you to add, delete, and update contacts in a MongoDB database.",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "npm run prod",
    "debug": "cross-env DEBUG=express:* npm run dev",
    "prod": "cross-env NODE_ENV=production npm run server",
    "dev": "cross-env NODE_ENV=development npm run server",
    "watch": "nodemon",
    "server": "node ./server/bin/www.js",
    "lint:fix": "npm run lint -- --fix",
    "lint": "xo **/*.js",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nathanbirch/cse341-apiCourse-code.git"
  },
  "author": "Nathan Birch",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nathanbirch/cse341-apiCourse-code/issues"
  },
  "homepage": "https://github.com/nathanbirch/cse341-apiCourse-code#readme",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.17.3",
    "mongodb": "^5.3.0",
    "morgan": "^1.10.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^4.6.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.1",
    "@types/morgan": "^1.9.4",
    "@types/swagger-jsdoc": "^6.0.1",
    "cross-env": "^7.0.3",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "xo": "^0.54.2"
  },
  "resolutions": {
    "minimist": "^1.2.8"
  },
  "nodemonConfig": {
    "exec": "npm run dev",
    "watch": [
      "server/*",
      "public/*"
    ],
    "ignore": [
      "**/__tests__/**",
      "*.test.js",
      "*.spec.js"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist-server/"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/dist-server/"
    ]
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "xo": {
    "prettier": true,
    "semicolon": false,
    "envs": [
      "es6",
      "jest",
      "mongo",
      "node"
    ]
  }
}
