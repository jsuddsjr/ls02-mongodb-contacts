{
  "name": "mongodb-contacts-api",
  "version": "1.0.0",
  "description": "Class assignment for CSE 341. A simple API that allows you to add, delete, and update contacts in a MongoDB database.",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "npm run prod",
    "build": "npm-run-all clean transpile",
    "clean": "rimraf dist-server",
    "transpile": "babel ./server --out-dir dist-server --out-file-extension .cjs",
    "debug": "cross-env DEBUG=express:* npm run dev",
    "prod": "cross-env NODE_ENV=production npm-run-all build server",
    "dev": "cross-env NODE_ENV=development npm-run-all build server",
    "watch": "nodemon",
    "server": "node ./dist-server/bin/www.cjs",
    "lint:fix": "npm run lint --fix",
    "lint": "xo --env=node **/*.js !dist-server/**",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nathanbirch/cse341-apiCourse-code.git"
  },
  "author": "Nathan Birch",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nathanbirch/cse341-apiCourse-code/issues"
  },
  "homepage": "https://github.com/nathanbirch/cse341-apiCourse-code#readme",
  "dependencies": {
    "dotenv": "^16.0.3",
    "express": "^4.17.3",
    "mongodb": "^5.3.0",
    "morgan": "^1.10.0",
    "xo": "^0.54.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.21.5",
    "@babel/core": "^7.21.5",
    "@babel/preset-env": "^7.21.5",
    "babel": "^6.23.0",
    "babel-loader": "^9.1.2",
    "cross-env": "^7.0.3",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.0"
  },
  "resolutions": {
    "minimist": "^1.2.8"
  },
  "nodemonConfig": {
    "exec": "npm run dev",
    "watch": [
      "server/*",
      "public/*"
    ],
    "ignore": [
      "**/__tests__/**",
      "*.test.js",
      "*.spec.js"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist-server/"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/dist-server/"
    ]
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  }
}
